<% if current_user.admin? %>
  <%= link_to 'New product', new_registry_product_path %>
<% end %>

<section class="products">
  <% @products.each do |product| %>
    <div class="product">
      <h3><%= product.name %></h3>
      <%= link_to 'Edit', edit_registry_product_path(product) if current_user.admin? %>
    </div>
  <% end %>
</section>